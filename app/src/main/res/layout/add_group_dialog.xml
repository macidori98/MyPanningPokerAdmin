<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editText_add_group_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/add_group_id" />

    <EditText
        android:id="@+id/editText_add_group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/add_group_name" />

    <EditText
        android:id="@+id/editText_add_group_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_group_time"
        android:inputType="number"/>
</LinearLayout>